# ============================================
# Nexus Configuration Template
# Copy this to .env.nexus and edit values
# ============================================

# ========================================
# Database Configuration
# ========================================
# Point to your PostgreSQL server (VM or external)
DATABASE_HOST=your-postgres-vm.local
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=nexus

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_HOST=your-redis-vm.local
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# Application Settings
# ========================================
SITE_URL=https://nexus.your-domain.com
NEXUS_SECRET_KEY=your-32-char-secret-key-here
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Nexus

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-48-char-jwt-secret-key-here
JWT_EXP=3600
REFRESH_TOKEN_REUSE_INTERVAL=10
OPERATOR_TOKEN=your-uuid-operator-token

# ========================================
# Email Configuration (Optional)
# ========================================
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# ========================================
# AI Provider API Keys
# ========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# MiniMax
MINIMAX_API_KEY=your-minimax-key
MINIMAX_MODEL=abab6.5s-chat

# ========================================
# GitHub Integration (Optional)
# ========================================
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=https://nexus.your-domain.com/api/github/callback

# ========================================
# Billing Configuration (Optional)
# ========================================
ENABLE_BILLING=false
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
REVOLUT_API_KEY=

# ========================================
# BYOK Encryption Key
# ========================================
API_KEY_ENCRYPTION_KEY=your-32-char-encryption-key

# ========================================
# Feature Toggles
# ========================================
ENABLE_GITHUB_INTEGRATION=true
ENABLE_BILLING_UI=true
ENABLE_ADMIN_DASHBOARD=true
