# ============================================
# Nexus - Environment Variables
# Copy this to .env.local for local development
# Copy to .env for Docker deployment
# ============================================

# ========================================
# Database Configuration
# ========================================
POSTGRES_PASSWORD=postgres_secure_password_change_this

# ========================================
# Supabase Configuration
# ========================================
# Generate anon key from Supabase dashboard or use default for development
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-from-supabase-dashboard
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-supabase-dashboard

# ========================================
# Application Settings
# ========================================
SITE_URL=http://localhost:3000
NEXUS_SECRET_KEY=your-nexus-secret-key-min-32-chars

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXP=3600
REFRESH_TOKEN_REUSE_INTERVAL=10
OPERATOR_TOKEN=operator-token-change-in-production

# ========================================
# Email Configuration (Optional)
# ========================================
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=Nexus
SMTP_ADMIN_EMAIL=admin@example.com

# ========================================
# AI Provider API Keys
# ========================================

# OpenAI (GPT-4, GPT-3.5-Turbo)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Claude 3 Opus, Sonnet, Haiku)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# MiniMax
MINIMAX_API_KEY=your-minimax-key-here
MINIMAX_MODEL=abab6.5s-chat

# ========================================
# Revolut Payment Integration
# ========================================
REVOLUT_API_KEY=sk_live_your-revolut-api-key
REVOLUT_MERCHANT_ID=your-merchant-id
REVOLUT_WEBHOOK_SECRET=whsec_your-webhook-secret

# ========================================
# GitHub OAuth (Optional)
# ========================================
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# ========================================
# Development Settings
# ========================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Nexus
